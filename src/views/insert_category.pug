doctype html
head
    meta(charset='utf-8')
    link(rel='apple-touch-icon' sizes='76x76' href='https://res.cloudinary.com/cde/image/upload/v1658206315/Icon/logo_cdrkpi.png')
    link(rel='icon' type='image/png' href='https://res.cloudinary.com/cde/image/upload/v1658206315/Icon/logo_cdrkpi.png')
    meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
    meta(http-equiv="Content-Security-Policy" content="upgrade-insecure-requests")
    title Model Fashion
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport')
    link(href='https://fonts.googleapis.com/css?family=Montserrat:400,700,200' rel='stylesheet')
    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css' rel='stylesheet')
    // CSS Files
    style 
        include ./assets/css/bootstrap.min.css
    style 
        include ./assets/css/paper-dashboard.css 
    style 
        include ./assets/css/main.css
.wrapper
    .sidebar(data-color='white' data-active-color='danger')
        .logo
            a.simple-text.logo-mini(href='/main')
                .logo-image-small
                    img(src="https://res.cloudinary.com/cde/image/upload/v1658206315/Icon/logo_cdrkpi.png")
            a.simple-text.logo-normal(href='/main')
                | Model Fashion
        .sidebar-wrapper
            ul.nav
                li
                    a(href='/main')
                        i.nc-icon.nc-chart-pie-36
                        p Dashboard
                li
                    a(href='/user')
                        i.nc-icon.nc-circle-10
                        p User
                li.active
                    a(href='/category')
                        i.nc-icon.nc-bullet-list-67
                        p Category
                li
                    a(href='/product')
                        i.nc-icon.nc-align-left-2
                        p Product
                li
                    a(href='/voucher')
                        i.nc-icon.nc-money-coins
                        p Voucher
                li
                    a(href='/bill')
                        i.nc-icon.nc-delivery-fast
                        p Bill
                li
                    a(href='/profile')
                        i.nc-icon.nc-single-02
                        p Profile
                li.active-pro
                    a(href='/user/logout')
                        i.nc-icon.nc-user-run
                        p Log Out
    .main-panel
        nav.navbar.navbar-expand-lg.navbar-absolute.fixed-top.navbar-transparent
            .container-fluid
                .navbar-wrapper
                    a.navbar-brand(href='#') Thể loại
        .content.d-flex.justify-content-center
            .col-md-5
                .card.card-user
                    .card-header
                        if(update)
                            h5.card-title  Update thể loại
                        else
                            h5.card-title  Tạo thể loại mới
                    .card-body
                        if(update)
                            form(action='/category/update' method='POST' enctype='multipart/form-data' role='form')
                                input.form-control(type='text' name='category_id'  hidden   value=category.category_id  )
                                .row
                                    .col-md-10.pr-1
                                        .form-group
                                            label Tên thể loại
                                            input.form-control(type='text' name='category_name' value=category.category_name)
                                .row    
                                    .col-md-5.pr-1.pb-3.align-self-center
                                        .form-group
                                            label Ảnh minh họa
                                        .flex.justify-between.mb-6
                                            .flex
                                                input#imageCategory(type='file' name='category_image')
                                .row
                                    .update.ml-auto.mr-auto
                                        button.btn.btn-primary(type='submit' value='Update' name='submit') Update
                        else 
                            form.was-validated(action='/addCategory' method='POST' enctype='multipart/form-data' role='form')
                                .row
                                    .col-md-10.pr-1
                                        .form-group
                                            label Tên thể loại
                                            input.form-control(type='text' name='category_name' required='')
                                .row    
                                    .col-md-5.pr-1.pb-3.align-self-center
                                        .form-group
                                            label Ảnh minh họa
                                        .flex.justify-between.mb-6
                                            .flex
                                                input#imageCategory(type='file' name='category_image' required='')
                                .row
                                    .update.ml-auto.mr-auto
                                        button.btn.btn-primary(type='submit' value='Tạo thể loại' name='submit') Tạo thể loại
script
    include ./assets/js/core/jquery.min.js
script
    include ./assets/js/core/popper.min.js
script
    include ./assets/js/core/bootstrap.min.js
script
    include ./assets/js/plugins/perfect-scrollbar.jquery.min.js
script
    include ./assets/js/plugins/chartjs.min.js
script
    include ./assets/js/plugins/bootstrap-notify.js
script
    include ./assets/js/paper-dashboard.min.js
script 
    include ./assets/js/plugins/bootstrap-notify.js
