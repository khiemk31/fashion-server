doctype html
head
    meta(charset='utf-8')
    link(rel='apple-touch-icon' sizes='76x76' href='https://res.cloudinary.com/cde/image/upload/v1658206315/Icon/logo_cdrkpi.png')
    link(rel='icon' type='image/png' href='https://res.cloudinary.com/cde/image/upload/v1658206315/Icon/logo_cdrkpi.png')
    meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
    title Model Fashion
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport')

    link(href='https://fonts.googleapis.com/css?family=Montserrat:400,700,200' rel='stylesheet')
    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css' rel='stylesheet')
    // CSS Files
    style 
        include ./assets/css/bootstrap.min.css
    style 
        include ./assets/css/paper-dashboard.css 
    style 
        include ./assets/css/main.css
.wrapper
    .sidebar(data-color='white' data-active-color='danger')
        .logo
            a.simple-text.logo-mini(href='/main')
                .logo-image-small
                    img(src="https://res.cloudinary.com/cde/image/upload/v1658206315/Icon/logo_cdrkpi.png")
            a.simple-text.logo-normal(href='/main')
                | Model Fashion
        .sidebar-wrapper
            ul.nav
                li
                    a(href='/main')
                        i.nc-icon.nc-chart-pie-36
                        p Dashboard
                li.active
                    a(href='/user')
                        i.nc-icon.nc-circle-10
                        p User
                li
                    a(href='/category')
                        i.nc-icon.nc-bullet-list-67
                        p Category
                li
                    a(href='/product')
                        i.nc-icon.nc-align-left-2
                        p Product
                li
                    a(href='/voucher')
                        i.nc-icon.nc-money-coins
                        p Voucher
                li
                    a(href='/bill')
                        i.nc-icon.nc-delivery-fast
                        p Bill
                li
                    a(href='/profile')
                        i.nc-icon.nc-single-02
                        p Profile
                li.active-pro
                    a(href='/user/logout')
                        i.nc-icon.nc-user-run
                        p Log Out
    .main-panel
        nav.navbar.navbar-expand-lg.navbar-absolute.fixed-top.navbar-transparent
            .container-fluid
                .navbar-wrapper
                    a.navbar-brand(href='#') Tạo tài khoản
        .content.d-flex.justify-content-center
            .col-md-5
                .card.card-user
                    .card-header
                        h5.card-title  Nhập thông tin tài khoản
                    .card-body
                        .was-validated
                            .row
                                .col-md-10.pr-1
                                    .form-group
                                        label Tên Người Dùng
                                        input#name.form-control(type='text' name='user_name' required='')
                            .row
                                .col-md-10.pr-1
                                    .form-group
                                        label Số Điện Thoại
                                        input#phone.form-control(type='phone' name='phone' required='')
                            .row
                                .col-md-5.pr-1
                                    .form-group
                                        label(for='exampleInputEmail1') Giới Tính
                                        select#gender.form-control(name='gender' required='') Chọn Giới Tính
                                            option(value=1 name='gender'  ) Nam
                                            option(value=2 name='gender'  ) Nữ
                                            option(value=0 name='gender') Không Xác Định
                                .col-md-5.pr-1
                                    .form-group
                                        label Loại Tài Khoản
                                        select#permission.form-control(name='permission' required='' ) Chọn loại tài khoản
                                            option(value="user" name='permission'  ) Khách Hàng
                                            option(value='admin' name='permission'  ) Admin
                            .row
                                .col-md-10.pr-1
                                    .form-group
                                        label Địa Chỉ
                                        input#address.form-control(type='text' name='address')
                            .row
                                .col-md-10.pr-1
                                    .form-group
                                        label Mật khẩu
                                        input#password.form-control(type='password' name='password' required='')
                            .row
                                .col-md-10.pr-1
                                    .form-group
                                        label Nhập lại mật khẩu
                                        input#rePassword.form-control(type='password' name='password' required='')
                            .row
                                .update.ml-auto.mr-auto
                                    button#btnAddUser.btn.btn-primary Tạo tài khoản
