    // CSS Files
    style 
        include ./assets/css/bootstrap.min.css
    style 
        include ./assets/css/paper-dashboard.css 
    style 
        include ./assets/css/main.css
.wrapper
    .sidebar(data-color='white' data-active-color='danger')
        .logo
            a.simple-text.logo-mini(href='/main')
                .logo-image-small
                    img(src="https://res.cloudinary.com/cde/image/upload/v1658206315/Icon/logo_cdrkpi.png")
            a.simple-text.logo-normal(href='/main')
                | Model Fashion
        .sidebar-wrapper
            ul.nav
                li
                    a(href='/main')
                        i.nc-icon.nc-chart-pie-36
                        p Dashboard
                li
                    a(href='/user')
                        i.nc-icon.nc-circle-10
                        p User
                li
                    a(href='/category')
                        i.nc-icon.nc-bullet-list-67
                        p Category
                li.active
                    a(href='/product')
                        i.nc-icon.nc-align-left-2
                        p Product
                li
                    a(href='/voucher')
                        i.nc-icon.nc-money-coins
                        p Voucher
                li
                    a(href='/bill')
                        i.nc-icon.nc-delivery-fast
                        p Bill
                li
                    a(href='/profile')
                        i.nc-icon.nc-single-02
                        p Profile
                li.active-pro
                    a(href='/user/logout')
                        i.nc-icon.nc-user-run
                        p Log Out
    .main-panel
        nav.navbar.navbar-expand-lg.navbar-absolute.fixed-top.navbar-transparent
            .container-fluid
                .navbar-wrapper
                    a.navbar-brand(href='#') Thông tin sản phẩm
        .content
            .row
                .col-md-6
                    .card(style="width:30rem;")
                        img.card-img-top(src=product.product_image)
                        .note.on-sale= "Đang sale " + product.discount + "%"
                        .card-body
                            h5(style=" font-weight: bold;").card-title= product.product_name
                            p.card-text(style= "font-size: 1rem ; font-weight: bold;")="Thể loại: "+product.category_name
                            if(product.discount>0)
                                p.card-text.text-primary(style= "font-size: 1rem ; font-weight: bold;") Giá: 
                                    del=product.price +"đ"
                                p.card-text.text-danger(style= "font-size: 1.1rem ; font-weight: bold;")="Giảm giá: "+product.sale_price+"đ" 
                            else
                                p.card-text.text-primary(style= "font-size: 1.1rem ; font-weight: bold;")="Giá: "+product.price+"đ" 
                            p.card-text(style= "font-size: 1rem ; font-weight: bold;")="Số lượng đã bán: "+product.quantity_sold
                            p.card-text(style= "font-size: 1rem ; font-weight: bold;")="Ngày đăng bán: "+product.created_at
                            if(product.updated_at)
                                p.card-text(style= "font-size: 1rem ; font-weight: bold;")="Ngày cập nhật mới: "+product.updated_at
                            if(product.deleted_at)
                                p.card-text(style= "font-size: 1rem ; font-weight: bold;")="Sản phẩm đã tạm dừng bán vào ngày: "+product.deleted_at
                            p.card-text(style= "font-size: 1rem ; font-weight: bold;") Bảng size sản phẩm
                            table.table.table-striped
                                thead
                                    tr
                                        th Loại size
                                        th Số lượng
                                each size in listSizeProduct
                                    tbody
                                        tr
                                            td= size.size
                                            if(size.quantity>0)
                                                td= size.quantity
                                            else
                                                td Hết hàng
                            a.btn.btn-primary(href='/updateProduct/'+product.product_id) Sửa thông tin
                            if(product.deleted_at == null)
                                a.btn.btn-danger(href='/product/hiddenProduct/'+product.product_id) Ngừng kinh doanh
                            else
                                a.btn.btn-primary(href='/product/showProduct/'+product.product_id) Mở bán lại 
                .col-sm-6
                    .card(style="width:20rem;")
                        h5.card-title.text-center.mt-2 Ảnh minh họa
                        img.card-img-top(src=product.product_bgr1)
                        img.card-img-top(src=product.product_bgr2)
                        img.card-img-top(src=product.product_bgr3)
